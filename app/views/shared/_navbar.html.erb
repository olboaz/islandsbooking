<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "€ EUR", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "List your Island", "#", class: "nav-link btn btn-success ml-3" %>
        </li>
        <li class="nav-item dropdown ml-3">
          <%= image_tag "/assets/logo-ea5ee4a34797c1e48069d0213c0c336bbf62372dc18a2c64586546c95c920e70.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "€ EUR", "#", class: "nav-link mr-3" %>
        </li>
        <li class="nav-item" id="login">
          <%= link_to "Login", new_user_session_path, class: "nav-link ml-3" %>
        </li>
        <li class="nav-item" id="signup">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link btn btn-success ml-3" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
