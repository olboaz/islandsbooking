<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="my-3"><%= @user.username %></h1>
      <div class="bg-white p-3 my-3">
        <div class="d-flex justify-content-between align-items-baseline">
          <h2 class="mb-3">About me</h2>
          <% unless current_page?(edit_user_url) %>
            <span class="btn btn-secondary p-2"><%= link_to "Edit my profile", edit_user_url, id:"btn-edit-profile" %></span>
          <% end %>
        </div>
        <% if current_page?(edit_user_url) %>
          <%= simple_form_for(@user) do |f| %>
            <div class="mb-3">
              <span class="badge badge-primary">Email</span> <span class="text-muted"><%= @user.email %></span>
            </div>
            <%= f.input :username %>
            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.button :submit, "Update my profile", class: 'btn btn-primary' %>
          <% end %>
        <% else %>
          <div>
            <ul class="list-unstyled">
              <li class="d-flex align-items-center"><i class="fas fa-user icon-user-profile"></i><%= @user.username %></li>
              <li class="d-flex align-items-center"><i class="far fa-envelope icon-user-profile"></i>Email<%= @user.email %></li>
              <li class="d-flex align-items-center"><i class="far fa-id-badge icon-user-profile"></i><%= "#{@user.first_name} #{@user.last_name}" %></li>
            </ul>
          </div>
        <% end %>
      </div>
      <% if @user.bookings.any? %>
        <div class="bg-white p-3 my-3">
          <h2 class="mb-3">My bookings</h2>
          <div class="cards-booking">
            <% @user.bookings.order(created_at: :desc).each do |booking| %>
            <div class="card-booking">
              <div class="card-booking-infos">
                <div class="d-flex align-items-baseline">
                  <h3><%= booking.island.name %></h3>
                </div>
                <ul class="list-unstyled">
                  <li class="d-flex align-items-center"><i class="far fa-calendar-alt icon-user-profile"></i>From <%= "#{booking.start_date.strftime("%b %d, %Y")} until #{booking.end_date.strftime("%b %d, %Y")}" %></li>
                  <li class="d-flex align-items-center"><i class="fas fa-bed icon-user-profile"></i> <%= (booking.end_date - booking.start_date).to_i %></li>
                  <li class="d-flex align-items-center"><i class="far fa-money-bill-alt icon-user-profile"></i> <%= booking.total_price %> â‚¬</li>
                  <% if booking.island.reviews.count == 0 %>
                    <li><%= link_to "> Rate this island", new_island_review_path(booking.island) %></li>
                  <% end %>
                </ul>
                <div>
                  <% if booking.island.reviews.count != 0 %>
                  <h5>
                    Your comment on the island
                  </h5>
                  <ul class="list-unstyled">
                    <li>Your rating : <%= icon('fas', 'star', class: 'star-rating') * (booking.island.reviews.first.rating) %><%= icon('far', 'star', class: 'star-rating') * (5 - booking.island.reviews.first.rating) %></li>
                    <li>Your comment : <%= booking.island.reviews.first.content %></li>
                  </ul>
                  <% end %>
                </div>
              </div>
              <% if booking.status == "pending" %>
                  <i class="far fa-clock icon-top-right icon-yellow"></i>
                <% else %>
                  <i class="fas fa-check-circle icon-top-right icon-green"></i>
              <% end %>
            </div>
          <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
