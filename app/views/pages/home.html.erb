          <form>
            <div class="row form-group">
              <div class="col">
                <%= f.text_field :name, class: "form-control", id: "islandName", placeholder: "Search by country or island" %>
              </div>
            </div>
<!--          <div class="row form-group">
                <div class="col">
                  <%#= f.label :"Check-in", for: "checkIn" %>
                  <%#= f.date_field :start_date, :value => Time.now.strftime('%Y-%m-%d'), class: "form-control", id: "checkIn" %>
                </div>
                <div class="col">
                  <%#= f.label :"Check-out", for: "checkOut" %>
                  <%#= f.date_field :end_date, :value => Date.today+1, class: "form-control", id: "checkOut" %>
                </div>
              </div> -->
              <%= f.submit "Search", class: "btn btn-primary float-right" %>
            </div>
          </form>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container" style="position:relative;">
  <div class="row">
    <div class="col">
      <h1 class="text-center m-5 floating" style="color: #6C757D"><strong>Dive in !</strong></h1>
      <div class="cards">
        <% @islands.last(6).each do |island| %>
                    <%= link_to island_path(island) do %>
            <% if island.photo.attached?%>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.9)),
                url('<%= cl_image_path island.photo.key, height: 300, width: 400, crop: :fill %>');">
            <% else %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.9)),
                url('https://source.unsplash.com/1600x900/?island-<%=island.name%>');">
            <% end %>
                <h2 class="card-title"><%= island.name.capitalize %> </h2>
<!--                 <h5 class="card-country"><%= island.country.capitalize %></h5> -->
                <h5 class="card-square-km"><%= island.aera %> km²</h5>
                <p class="number_of_guests"><i class="fas fa-user-friends"></i><%= island.number_of_guests %></p>
                <p class="price">€ <%= (island.price.*1.25).round(2) %>K </p>
              </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col d-flex justify-content-center">
      <%= link_to "See more", islands_path, class:"btn btn-primary font-weight-bold" %>
    </div>
  </div>
</div>

