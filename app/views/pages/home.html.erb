<div id="home-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container-fluid">
    <div class="row">
      <div class="col-1"></div>
      <div class="col-lg-4 col-xl-3 mx-5" id="form">
        <h1 class="mb-3">Book your dream island to stay !</h1>
        <%= form_with url: islands_path, method: "GET", local: true do |f| %>
          <form>
            <div class="row form-group">
              <div class="col">
                <%= f.label :"Island name", for: "islandName" %>
                <%= f.text_field :name, class: "form-control", id: "islandName" %>
              </div>
            </div>
            <div class="row form-group">
                <div class="col">
                  <%= f.label :"CHECK-IN", for: "checkIn" %>
                  <%= f.date_field :start_date, :value => Time.now.strftime('%Y-%m-%d'), class: "form-control", id: "checkIn" %>
                </div>
                <div class="col">
                  <%= f.label :"CHECK-OUT", for: "checkOut" %>
                  <%= f.date_field :end_date, :value => Date.today+1, class: "form-control", id: "checkOut" %>
                </div>
              </div>
            <%= f.submit "Search", class: "btn btn-primary float-right" %>
          </form>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container">

</div>

<div class="container">
  <h2 class="text-center">Last island available</h2>
  <div class="cards">
    <% @islands.last(6).each do |island| %>
      <%= link_to island_path(island) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)),
          url('https://source.unsplash.com/1600x900/?island-<%=island.name%>');">
          <h2><%= island.name.capitalize %> </h2>
        </div>
        <div>
          <p class="fas fa-user-alt"> <%= island.number_of_guests %> </p>
          <p class="fas fa-euro-sign"> <%= island.price %> </p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
